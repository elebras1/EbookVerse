{% extends "base.html.twig" %}

{% block title %}
	Ajouter un auteur
{% endblock %}

{% block body %}
	<div class="content flex justify-center items-center flex-col">
		<div class="w-3/4 max-w-5xl bg-white shadow-md rounded-lg p-8">
			<span class="flex justify-center text-4xl underline">Ajouter un auteur</span>

			<div class="col-span-full mt-10">
				{{ form_start(form) }}
				<div class="my-custom-class-for-errors">
					{{ form_errors(form) }}
				</div>

				<div class="form-group">
					{{form_label(form.nom)}}
					{{form_widget(form.nom)}}
					<div class="text-red-500 text-sm mt-1">
						{{form_errors(form.nom)}}
					</div>
				</div>

				<div class="form-group">
					{{form_label(form.prenom)}}
					{{form_widget(form.prenom)}}
					<div class="text-red-500 text-sm mt-1">
						{{form_errors(form.prenom)}}
					</div>
				</div>

				<div class="form-group">
					{{form_label(form.description)}}
					{{form_widget(form.description)}}
					<div class="text-red-500 text-sm mt-1">
						{{form_errors(form.description)}}
					</div>
				</div>

				<div class="form-group">
					{{form_row(form.envoyer)}}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
