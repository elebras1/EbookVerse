{% extends 'base.html.twig' %}

{% block title %}Edition du profil
{% endblock %}

{% block body %}
	<div class="content flex justify-center items-center flex-col">
		<div class="w-96 max-w-4xl bg-white shadow-md rounded-lg p-8">
			<span class="flex justify-center text-4xl mb-10 underline">Modification du profil utilisateur</span>
			{{ form_start(form) }}
			{{ form_widget(form) }}
			<button type="submit" class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mt-5">Envoyer</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
