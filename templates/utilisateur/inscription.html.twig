{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="content flex justify-center items-center flex-col">
		<div class="w-96 max-w-4xl bg-white shadow-md rounded-lg p-8">
			<span class="flex justify-center text-4xl mb-10">Inscription</span>
			{{ form_start(form) }}
			{% for type, messages in app.session.flashBag.all() %}
				<div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4" role="alert">
					{% for message in messages %}
						<p>{{ message }}</p>
					</div>
				{% endfor %}
			{% endfor %}
			<div class="text-red-500 text-sm mt-1">
				{{ form_errors(form) }}
			</div>

			<div class="form-group">
				{{ form_label(form.pseudo) }}
				{{ form_widget(form.pseudo) }}
				<div class="text-red-500 text-sm mt-1">
					{{ form_errors(form.pseudo) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.mot_de_passe.first) }}
				{{ form_widget(form.mot_de_passe.first) }}
				<div class="text-red-500 text-sm mt-1">
					{{ form_errors(form.mot_de_passe.first) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.mot_de_passe.second) }}
				{{ form_widget(form.mot_de_passe.second) }}
				<div class="text-red-500 text-sm mt-1">
					{{ form_errors(form.mot_de_passe.second) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.profil.nom) }}
				{{ form_widget(form.profil.nom) }}
				<div class="text-red-500 text-sm mt-1">
					{{ form_errors(form.profil.nom) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.profil.prenom) }}
				{{ form_widget(form.profil.prenom) }}
				<div class="text-red-500 text-sm mt-1">
					{{ form_errors(form.profil.prenom) }}
				</div>
			</div>
			{{ form_end(form) }}
			<p class="text-sm font-light text-gray-500 dark:text-gray-400 mt-6">
				Vous avez déjà un compte?
				<a href="{{ path('connexion')}}" class="font-medium text-blue-600 hover:underline dark:text-blue-500">Connexion</a>
			</p>
		</div>
	</div>
{% endblock %}
